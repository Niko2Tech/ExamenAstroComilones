---
// font
// Supports weights 300-800
import "@fontsource-variable/open-sans";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Los comilones" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
		<script
			is:inline
			src="https://kit.fontawesome.com/817cd7e4fc.js"
			crossorigin="anonymous"></script>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	body {
		font-family: "Open Sans Variable", sans-serif;
	}
</style>
